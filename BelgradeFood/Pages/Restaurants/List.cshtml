@page
@model BelgradeFood.ListModel
@{ ViewData["Title"] = "Restaurants"; }

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" asp-for="SearchTerm" class="form-control" placeholder="Search for restaurants" focus>
            <span class="input-g-btn">
                <button class="btn btn-primary">
                    <i>Search</i>
                </button>
            </span>

        </div>

        <div class="text-danger">No restaurants found</div>
    </div>
</form>
<table class="table table-bordered table-hover">
    <thead>

    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine type</th>
        </tr>

        @foreach(var restoran in Model.Restaurants)
        {
            <tr class="table-hover d-lg-table-cell">

                <td class="d-lg-table-cell ">@restoran.Name</td>
                <td class="d-lg-table-cell">@restoran.Location</td>
                <td class="d-lg-table-cell">@restoran.Cuisine</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-restaurantId="@restoran.Id">Details</a>
                </td>
                
                <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-restaurantId="@restoran.Id">Edit</a>
                </td>

            </tr>
        }

    </thead>
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>





<div>
    @Model.Message
</div>